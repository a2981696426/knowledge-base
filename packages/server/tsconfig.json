{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@helpers/*": ["src/helpers/*"],
      "@pipes/*": ["src/pipes/*"],
      "@transforms/*": ["src/transforms/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@guard/*": ["src/guard/*"],
      "@dtos/*": ["src/dtos/*"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@modules/*": ["src/modules/*"],
      "@constants/*": ["src/constants"]
    }
  },
  "watchOptions": {
    "excludeFiles": ["static"]
  }
}
